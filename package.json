{
  "name": "hands2gether",
  "version": "1.0.0",
  "description": "A community-driven platform to connect people in need with those who can help",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "server": "nodemon backend/server.js",
    "client": "node ./node_modules/webpack-dev-server/bin/webpack-dev-server.js --config webpack.dev.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "node ./node_modules/webpack/bin/webpack.js --config webpack.prod.js",
    "test": "jest",
    "test:backend": "jest --config=backend/jest.config.js",
    "test:frontend": "jest --config=frontend/jest.config.js",
    "cypress": "cypress open",
    "lint": "eslint .",
    "seed": "node backend/seed.js",
    "eject": "react-scripts eject"
  },
  "keywords": [
    "charity",
    "community",
    "food assistance",
    "donation platform"
  ],
  "author": "Hands2gether Team",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "google-auth-library": "^8.8.0",
    "jsonwebtoken": "^9.0.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.3.1",
    "nodemailer": "^6.9.2",
    "helmet": "^6.1.5",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "@reduxjs/toolkit": "^1.9.5",
    "antd": "^5.5.0",
    "axios": "^1.4.0",
    "highcharts": "^11.0.1",
    "highcharts-react-official": "^3.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.11.1",
    "react-quill": "^2.0.0",
    "moment": "^2.29.4",
    "less": "^4.1.3",
    "less-loader": "^11.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@babel/preset-env": "^7.21.5",
    "@babel/preset-react": "^7.18.6",
    "babel-jest": "^29.5.0",
    "concurrently": "^8.0.1",
    "cypress": "^12.12.0",
    "eslint": "^8.40.0",
    "eslint-plugin-react": "^7.32.2",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "babel-loader": "^9.1.2",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.7.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.7",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.1",
    "mini-css-extract-plugin": "^2.7.5",
    "style-loader": "^3.3.2",
    "terser-webpack-plugin": "^5.3.7",
    "url-loader": "^4.1.1",
    "webpack": "^5.82.1",
    "webpack-cli": "^5.1.1",
    "webpack-dev-server": "^4.15.0",
    "webpack-merge": "^5.8.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "proxy": "http://localhost:5000"
